	journaltitle = {Nature Communications},
	shortjournal = {Nat Commun},
	author = {Staal, Arie and Fetzer, Ingo and Wang-Erlandsson, Lan and Bosmans, Joyce H. C. and Dekker, Stefan C. and van Nes, Egbert H. and Rockström, Johan and Tuinenburg, Obbe A.},
	urldate = {2021-04-02},

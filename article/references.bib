	langid = {english},
	file = {Staal et al. - 2020 - Hysteresis of tropical forests in the 21st century.pdf:/Users/mathieu/Zotero/storage/8KLULU38/Staal et al. - 2020 - Hysteresis of tropical forests in the 21st century.pdf:application/pdf},
}

@article{steffen_trajectories_2018,

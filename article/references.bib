	date = {1996-04-01},
	note = {Publisher: American Meteorological Society
Section: Journal of Climate},
	file = {Full Text PDF:/Users/mathieu/Zotero/storage/DRTTH8YF/Zeng et al. - 1996 - Climatic Impact of Amazon Deforestation—A Mechanis.pdf:application/pdf;Snapshot:/Users/mathieu/Zotero/storage/7G2DKX4U/1520-0442_1996_009_0859_cioadm_2_0_co_2.html:text/html},
}
